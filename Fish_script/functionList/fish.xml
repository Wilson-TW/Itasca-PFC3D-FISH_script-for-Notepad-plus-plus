<NotepadPlus>
	<functionList>
		<!-- ====================================================== [ Python ] -->

		<parser
			displayName="FISH"
			id         ="FISH"
			commentExpr="(?s:'''.*?''')|(?m-s:#.*?$)"
		>
			<function
				mainExpr="^def\x20\K.+?(?=\s)"
			>
				<functionName>
					<nameExpr expr=".*" />
				</functionName>
			</function>
		</parser>
	</functionList>
</NotepadPlus>